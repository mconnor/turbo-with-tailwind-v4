{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {

    "build": {
      "dependsOn": ["^build"],
      "env": [
        "MY_API_URL",
        "MY_API_KEY"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env"
      ],
      "outputs": ["dist/**"]
    },
    "transit": {
      "dependsOn": ["^transit"]
    },
    "lint": {
      "dependsOn": ["transit"]
    },
    "//#lint:root": {},
    "fix": {
      "dependsOn": ["transit"]
    },
    "type-check": {
      "dependsOn": ["transit"]
    },
    "astro-check": {
      "inputs": ["**/*.{astro,ts,tsx,js,jsx}"],
      "cache": true,
      "dependsOn": ["transit"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^clean", "^build"]
    },
    "clean": {
      "cache": false
    },
    "format": {},
        "//#format:root": {},
    "format:check": {}
  }

}
