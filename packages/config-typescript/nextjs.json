{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true
  },
  "include": [
    "${configDir}/src/*.ts",
    "${configDir}/src/*.tsx",
    "${configDir}/next-env.d.ts",
    "${configDir}next.config.ts",
    "${configDir}/.next/types/**/*.ts"
  ]
}
