{
  "name": "@repo/ui-astro",
  "version": "0.0.0",
  "imports": {
    "#*": "./src/*"
  },
  "files": [
    "dist"
  ],
  "exports": {
    "./styles.css": "./dist/styles.css",
    "./*": "./src/*.astro"
  },
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "astro-check": "astro check",
    "build": "pnpm run clean && npx @tailwindcss/cli -i ./src/styles.css -o ./dist/styles.css ",
    "dev": "pnpm run clean && npx @tailwindcss/cli -i ./src/styles.css -o ./dist/styles.css  --watch",
    "lint": "eslint src --max-warnings 0",
    "type-check": "tsc --noEmit",
    "format": "prettier . --write"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/cli": "catalog:",
    "@tailwindcss/vite": "catalog:",
    "astro": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-tailwindcss": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@repo/design-system": "workspace:*",
    "tailwindcss": "catalog:"
  },
  "peerDependencies": {
    "tailwind": ">=4",
    "astro": ">=5"
  }
}
